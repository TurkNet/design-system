{
  "name": "@turk.net/design-system",
  "version": "0.1.1",
  "repository": "https://github.com/recepkoseoglu/design-system.git",
  "author": "Recep Köseoğlu <recepkoseoglu@hotmail.com>",
  "main": "./dist/index.js",
  "scripts": {
    "start": "start-storybook -p 6006 -s public",
    "build": "build-storybook -s public",
    "build-library": "tsc --project tsconfig.library.json",
    "format": "prettier --write src/**/*.{js,ts}{,x}",
    "lint": "tsc --noEmit && eslint src/**/*.{js,ts}{,x} --fix",
    "chromatic": "npx chromatic",
    "release": "auto shipit --base-branch=master"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn format",
      "git add"
    ],
    "package.json": "sort-package-json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.3",
    "styled-components": "5.2.1",
    "styled-system": "5.1.5",
    "styled-tools": "1.7.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "6.2.8",
    "@storybook/addon-essentials": "6.2.8",
    "@storybook/addon-links": "6.2.8",
    "@storybook/node-logger": "6.2.8",
    "@storybook/preset-create-react-app": "3.1.7",
    "@storybook/react": "6.2.8",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/styled-components": "5.1.9",
    "@types/styled-system": "5.1.11",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "auto": "10.25.1",
    "chromatic": "5.6.2",
    "eslint": "7.24.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.5",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "1.7.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "sort-package-json": "1.49.0",
    "typescript": "4.2.4"
  }
}
